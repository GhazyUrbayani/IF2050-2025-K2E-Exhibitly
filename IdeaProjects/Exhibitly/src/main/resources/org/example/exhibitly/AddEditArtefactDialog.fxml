<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane hgap="10.0" vgap="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    
    <Label text="Judul Artefak:" GridPane.rowIndex="0" />
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Region:" GridPane.rowIndex="1" />
    <TextField fx:id="regionField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Periode (Tahun):" GridPane.rowIndex="2" />
    <TextField fx:id="periodField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="URL Gambar:" GridPane.rowIndex="3" />
    <TextField fx:id="mediaURLField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Deskripsi:" GridPane.rowIndex="4" />
    <TextArea fx:id="descriptionArea" prefHeight="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <children>
            <Button fx:id="saveButton" text="Simpan" style="-fx-background-color: #333; -fx-text-fill: white;" />
            <Button fx:id="cancelButton" text="Batal" />
        </children>
    </HBox>
</GridPane>