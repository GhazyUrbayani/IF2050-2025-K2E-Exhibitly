<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #DDDDDD;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    
    <Label text="Terima Kasih Atas Kunjungan Anda!">
        <font><Font name="Plus Jakarta Sans Bold" size="18.0" /></font>
    </Label>
    <Label text="Silakan berikan masukan Anda mengenai pameran kami." />
    
    <TextArea fx:id="feedbackTextArea" promptText="Tulis masukan Anda di sini..." prefHeight="120.0" wrapText="true" />

    <Button fx:id="submitFeedbackButton" text="Kirim Feedback" style="-fx-background-color: #000000; -fx-text-fill: white;" />
</VBox>