<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.exhibitly.controller.LoginController">

    <!-- TOP: Logo dan Navigasi -->
    <top>
        <VBox spacing="10" alignment="CENTER">
            <ImageView fx:id="myImageView" fitHeight="100" fitWidth="200" preserveRatio="true" />
            <HBox spacing="20" alignment="CENTER" styleClass="navbar">
                <Button text="EXHIBIT" onAction="#handleExhibit" styleClass="nav-button"/>
                <Button text="ARTEFACT" onAction="#handleArtefact" styleClass="nav-button"/>
                <Button text="TICKETS" onAction="#handleTickets" styleClass="nav-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: Login Form -->
    <center>
        <HBox alignment="CENTER" spacing="0" styleClass="login-container">

            <!-- Kiri: Greeting -->
            <VBox alignment="CENTER" prefWidth="300" prefHeight="300" styleClass="welcome-box">
                <Label text="Selamat datang kembali!" styleClass="welcome-text"/>
            </VBox>

            <!-- Kanan: Form -->
            <VBox spacing="10" alignment="CENTER_LEFT" prefWidth="300" styleClass="form-box">
                <Label text="Email*" />
                <TextField fx:id="emailField" promptText="Masukkan email Anda.." />

                <Label text="Password*" />
                <PasswordField fx:id="passwordField" promptText="Masukkan password Anda.." />

                <Button text="Masuk" onAction="#handleLogin" styleClass="login-button"/>
            </VBox>

        </HBox>
    </center>
</BorderPane>
