<AnchorPane prefHeight="768.0" prefWidth="1366.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.exhibitly.controller.LoginController">
    <children>
        <Pane prefHeight="100.0" prefWidth="1366.0" style="-fx-background-color: #000000;">
            <children>
                <Pane layoutX="20.0" layoutY="30.0" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" />

                <HBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="100.0" prefWidth="1366.0">
                    <children>
                        <ImageView fx:id="myImageView" fitHeight="100" fitWidth="200" preserveRatio="true" />
                    </children>
                </HBox>

                <Button layoutX="1250.0" layoutY="30.0" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" text="Login">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <HBox alignment="CENTER" layoutX="0.0" layoutY="70.0" prefHeight="30.0" prefWidth="1366.0" spacing="100.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleExhibit" style="-fx-background-color: transparent;" text="EXHIBIT" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleArtefact" style="-fx-background-color: transparent;" text="ARTEFACT" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleTickets" style="-fx-background-color: transparent;" text="TICKETS" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </Pane>

        <StackPane layoutX="0.0" layoutY="100.0" prefHeight="668.0" prefWidth="1366.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <children>
                <Pane prefHeight="450.0" prefWidth="900.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;">
                    <children>
                        <VBox alignment="CENTER" layoutX="251.0" layoutY="107.0" prefHeight="450.0" prefWidth="450.0" style="-fx-background-color: #000000; -fx-background-radius: 10 0 0 10;">
                            <children>
                                <Label text="Selamat" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="datang" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                                <Label text="kembali!" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="36.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox alignment="CENTER_LEFT" layoutX="691.0" layoutY="107.0" prefHeight="450.0" prefWidth="430.0" spacing="20.0" style="-fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 0.3;">
                            <children>
                                <Label text="Email*">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="emailField" prefHeight="40.0" prefWidth="380.0" promptText="Masukkan email Anda." style="-fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-color: #FFFFFF;" />

                                <Label text="Password*">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="380.0" promptText="Masukkan password Anda." style="-fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-color: #FFFFFF;" />

                                <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="380.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #000000; -fx-background-radius: 5;" text="Masuk" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                        </VBox>
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>