<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0"
            style="-fx-background-color: #F8F8F8;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.exhibitly.controller.LoginController">

    <children>

        <!-- Top black bar -->
        <Region prefHeight="100.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0"
                style="-fx-background-color: #000000;" />

        <!-- Login button -->
        <Button fx:id="onLoginButtonClick"
                onAction="#onLoginButtonClick"
                prefHeight="40.0" prefWidth="80.0"
                AnchorPane.rightAnchor="36.0"
                AnchorPane.topAnchor="20.0"
                mnemonicParsing="false"
                style="-fx-background-color: black; -fx-pref-height: 30; -fx-border-color: white; -fx-border-radius: 20; -fx-border-width: 0.3;"
                text="Login"
                textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <!-- Navigation bar -->
        <HBox alignment="CENTER" spacing="100.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="68.0"
              prefHeight="33.0">
            <children>
                <Button text="EXHIBIT" onAction="#onExhibitButtonClick"
                        style="-fx-background-color: transparent;"
                        mnemonicParsing="false" textFill="WHITE">
                    <font>
                        <Font name="Plus Jakarta Sans Bold" size="14.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button text="ARTEFACT" onAction="#onArtefactButtonClick"
                        style="-fx-background-color: transparent;"
                        mnemonicParsing="false" textFill="WHITE">
                    <font>
                        <Font name="Plus Jakarta Sans Bold" size="14.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button text="TICKETS" onAction="#onTicketButtonClick"
                        style="-fx-background-color: transparent;"
                        mnemonicParsing="false" textFill="WHITE">
                    <font>
                        <Font name="Plus Jakarta Sans Bold" size="14.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
        </HBox>

        <!-- Logo button -->
        <Button fx:id="logoButton"
                onAction="#onLogoButtonClick"
                prefHeight="70.0" prefWidth="200.0"
                AnchorPane.leftAnchor="583.0"
                AnchorPane.rightAnchor="583.0"
                AnchorPane.topAnchor="0.0"
                style="-fx-background-color: transparent;">
            <graphic>
                <ImageView fitHeight="70.0" fitWidth="200.0" preserveRatio="true"/>
            </graphic>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

        <!-- White line -->
        <Pane prefHeight="0.1"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="66.0"
              style="-fx-background-color: white;" />

        <!-- Main login content -->
        <StackPane layoutX="0.0" layoutY="100.0"
                   AnchorPane.topAnchor="100.0"
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0"
                   prefHeight="668.0" prefWidth="1366.0">
            <children>
                <Pane prefHeight="450.0" prefWidth="900.0"
                      style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: #CCCCCC; -fx-border-radius: 10;">
                    <children>

                        <!-- Left Welcome Box -->
                        <VBox layoutX="251.0" layoutY="107.0"
                              prefHeight="450.0" prefWidth="450.0"
                              alignment="CENTER"
                              style="-fx-background-color: #000000; -fx-background-radius: 10 0 0 10;">
                            <children>
                                <Label text="Selamat" textFill="WHITE">
                                    <font>
                                        <Font name="Plus Jakarta Sans Bold" size="59.0"/>
                                    </font>
                                </Label>
                                <Label text="datang" textFill="WHITE">
                                    <font>
                                        <Font name="Plus Jakarta Sans Bold" size="59.0"/>
                                    </font>
                                </Label>
                                <Label text="kembali!" textFill="WHITE">
                                    <font>
                                        <Font name="Plus Jakarta Sans Bold" size="59.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Right Login Form -->
                        <VBox layoutX="691.0" layoutY="107.0"
                              prefHeight="450.0" prefWidth="430.0"
                              alignment="CENTER_LEFT" spacing="20.0"
                              style="-fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 0.3;">
                            <padding>
                                <Insets left="20.0" right="20.0"/>
                            </padding>
                            <children>
                                <Label text="Username*">
                                    <font>
                                        <Font name="Plus Jakarta Sans Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="usernameField"
                                           prefHeight="40.0" prefWidth="380.0"
                                           promptText="Masukkan username Anda."
                                           style="-fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-color: #FFFFFF;" />
                                <Label text="Password*">
                                    <font>
                                        <Font name="Plus Jakarta Sans Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField"
                                               prefHeight="40.0" prefWidth="380.0"
                                               promptText="Masukkan password Anda."
                                               style="-fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-color: #FFFFFF;" />
                                <HBox alignment="CENTER_RIGHT"
                                      prefHeight="50.0" prefWidth="380.0">
                                    <children>
                                        <Button text="Masuk" onAction="#handleLogin"
                                                mnemonicParsing="false"
                                                prefHeight="40.0" prefWidth="100.0"
                                                textFill="WHITE"
                                                style="-fx-background-color: #000000; -fx-background-radius: 20;">
                                            <font>
                                                <Font name="Plus Jakarta Sans Bold" size="16.0"/>
                                            </font>
                                            <cursor>
                                                <Cursor fx:constant="HAND"/>
                                            </cursor>
                                        </Button>
                                    </children>
                                </HBox>
                                <Label fx:id="loginMessageLabel" text="" textFill="RED" wrapText="true">
                                    <font>
                                        <Font name="Plus Jakarta Sans Regular" size="12.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                    </children>
                </Pane>
            </children>
        </StackPane>

        <!-- Extra anchor to avoid null children issue -->
        <AnchorPane prefHeight="200.0" prefWidth="200.0" />

    </children>
</AnchorPane>
